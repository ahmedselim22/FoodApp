<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MealActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_220sdp"
        android:id="@+id/appbar_randromMeal"
        tools:ignore="MissingConstraints">
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:contentScrim="@color/accent"
            android:id="@+id/collabsingToolBar_randomMeal"
            app:layout_scrollFlags="scroll|snap|exitUntilCollapsed"
            app:title="meal Name"
            app:expandedTitleTextColor="@color/white"
            app:collapsedTitleTextColor="@color/white"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/iv_randromMeal_appBar"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax"
                />
            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:id="@+id/toolbar_randomMeal"
                app:layout_collapseMode="pin"
                />
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_16sdp"
        android:src="@drawable/ic_favorite_outlined"
        app:backgroundTint="@color/accent"
        app:elevation="@dimen/_20sdp"
        android:id="@+id/fab_randomMeal_addToFavorite"
        app:layout_anchor="@id/appbar_randromMeal"
        app:layout_anchorGravity="bottom|end"
        app:tint="@color/white"
        tools:ignore="SpeakableTextPresentCheck" />
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <LinearLayout
                android:id="@+id/linear_randomMeal_categoryAndArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                >
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/tv_randomMeal_category"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="category :"
                    android:fontFamily="@font/myfont"
                    android:drawableStart="@drawable/ic_category"
                    android:padding="@dimen/_4sdp"
                    android:drawablePadding="@dimen/_8sdp"
                    android:textSize="@dimen/_14ssp"
                    android:textColor="@color/primary_text"
                    />
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/tv_randomMeal_area"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="area :"
                    android:fontFamily="@font/myfont"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:drawableStart="@drawable/ic_location"
                    android:padding="@dimen/_4sdp"
                    android:drawablePadding="@dimen/_8sdp"
                    android:textSize="@dimen/_14ssp"
                    android:textColor="@color/primary_text"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_randomMeal_instructions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="instructions :"
                android:textSize="@dimen/_15ssp"
                android:fontFamily="@font/myfont"
                android:padding="@dimen/_4sdp"
                android:textStyle="bold"
                android:layout_marginEnd="@dimen/_8sdp"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_10sdp"
                app:layout_constraintTop_toBottomOf="@id/linear_randomMeal_categoryAndArea"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="@dimen/_8sdp"
                />

            <TextView
                android:id="@+id/tv_randomMeal_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:padding="@dimen/_4sdp"
                android:text="descriptions"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/_14ssp"
                android:layout_marginBottom="@dimen/_16sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_randomMeal_instructions"
                app:layout_goneMarginEnd="@dimen/_8sdp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
    <ImageView
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:src="@drawable/ic_video"
        android:layout_gravity="center|bottom"
        android:id="@+id/iv_randromMeal_imgYoutube"
        android:layout_marginBottom="@dimen/_10sdp"
        />
    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:id="@+id/progressBar_randomMeal"
        app:layout_anchor="@id/appbar_randromMeal"
        app:layout_anchorGravity="bottom"
        android:visibility="gone"
        />

    <ProgressBar
        android:id="@+id/progressBar_mealActivity"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"
        />
</androidx.coordinatorlayout.widget.CoordinatorLayout>